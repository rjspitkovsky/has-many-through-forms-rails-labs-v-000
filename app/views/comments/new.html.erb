<%= form_for @comment do |f| %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <%= f.collection_check_boxes :user_id, User.all, :id, :name %>
  <%= f.fields_for :user, comment.user.build do |user_fields| %>
      <%= f.label "Name" %>
      <%= user_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
